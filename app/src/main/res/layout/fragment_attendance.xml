<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:clipToPadding="false"
    android:paddingBottom="130dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Title Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">
            
            <!-- ... content ... -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_white_rounded"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="Back"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                android:visibility="gone"
                app:tint="#1E293B"
                tools:visibility="visible" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Attendance"
                android:textColor="#1E293B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnNotify"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_white_rounded"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="Notifications"
                android:padding="8dp"
                android:src="@drawable/ic_notifications"
                app:tint="#1E293B" />
        </LinearLayout>

        <!-- Overall Attendance Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/attendanceSummaryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:strokeColor="#F3F4F6"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:id="@+id/lblOverallAttendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall Attendance"
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAttendancePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0%"
                    android:textColor="#111827"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblOverallAttendance" />

                <TextView
                    android:id="@+id/tvAttendanceStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="On Track"
                    android:textColor="#10B981"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAttendancePercentage" />

                <!-- Circular Progress -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:indicatorColor="#4F46E5"
                    app:trackColor="#EEF2FF"
                    app:indicatorSize="80dp"
                    app:trackThickness="8dp"
                    app:trackCornerRadius="4dp"
                    android:progress="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Icon inside Progress -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="#4F46E5"
                    app:layout_constraintBottom_toBottomOf="@id/progressIndicator"
                    app:layout_constraintEnd_toEndOf="@id/progressIndicator"
                    app:layout_constraintStart_toStartOf="@id/progressIndicator"
                    app:layout_constraintTop_toTopOf="@id/progressIndicator" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.kizitonwose.calendar.view.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            app:cv_dayViewResource="@layout/calendar_day_layout"
            app:cv_monthHeaderResource="@layout/calendar_month_header" />

        <!-- Legends (Restored) -->
        <LinearLayout
            android:id="@+id/legendsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Present -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical">
                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_present_day"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present"
                    android:textColor="#374151"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Absent -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical">
                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_absent_day"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absent"
                    android:textColor="#374151"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Leave -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_leave_day"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leave"
                    android:textColor="#374151"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Stats Section Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance Statistics"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp"/>

        <!-- Stats Row (4 Cards) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:weightSum="4"
            android:baselineAligned="false">

            <!-- Card 1: Total (Purple) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="#EDE9FE"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:id="@+id/tvTotalDaysCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#5B21B6"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="TOTAL"
                        android:textColor="#7C3AED"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Present (Green) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:cardBackgroundColor="#DCFCE7"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:id="@+id/tvPresentCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#15803D"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="PRESENT"
                        android:textColor="#16A34A"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3: Absent (Red) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:cardBackgroundColor="#FEE2E2"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:id="@+id/tvAbsentCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#B91C1C"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="ABSENT"
                        android:textColor="#DC2626"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 4: Leave (Orange) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="#FFEDD5"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:id="@+id/tvLeaveCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#C2410C"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="LEAVE"
                        android:textColor="#EA580C"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave History"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLeaveHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="16dp"
            tools:itemCount="3"
            tools:listitem="@layout/item_leave_history"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
