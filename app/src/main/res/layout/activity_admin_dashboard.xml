<?xml version="1.0" encoding="utf-8"?><!-- Enhanced Admin Dashboard with Material Design 3 -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.dashboard.AdminDashboardActivity">

    <!-- App Bar with lift-on-scroll for a modern, dynamic effect -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:liftOnScroll="true"
        app:liftOnScrollColor="?attr/colorPrimary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:navigationIconTint="?attr/colorOnPrimary"
            app:title="Admin Dashboard"
            app:titleTextAppearance="?attr/textAppearanceHeadlineSmall"
            app:titleTextColor="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content with SwipeRefreshLayout and NestedScrollView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingBottom="80dp">

                <!-- Summary Statistics Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/summaryCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="?attr/colorSecondaryContainer"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_green"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Quick Overview"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <!-- Total Teachers -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tvTotalTeachers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                    android:textColor="?attr/colorOnSecondaryContainer"
                                    android:textStyle="bold" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:alpha="0.8"
                                    android:text="Teachers"
                                    android:textAppearance="?attr/textAppearanceLabelMedium"
                                    android:textColor="?attr/colorOnSecondaryContainer" />

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:alpha="0.2"
                                android:background="?attr/colorOnPrimaryContainer" />

                            <!-- Total Students -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tvTotalStudents"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                    android:textColor="?attr/colorOnSecondaryContainer"
                                    android:textStyle="bold" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:alpha="0.8"
                                    android:text="Students"
                                    android:textAppearance="?attr/textAppearanceLabelMedium"
                                    android:textColor="?attr/colorOnSecondaryContainer" />

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:alpha="0.2"
                                android:background="?attr/colorOnPrimaryContainer" />

                            <!-- Total Classes -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tvTotalClasses"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                    android:textColor="?attr/colorOnSecondaryContainer"
                                    android:textStyle="bold" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:alpha="0.8"
                                    android:text="Classes"
                                    android:textAppearance="?attr/textAppearanceLabelMedium"
                                    android:textColor="?attr/colorOnSecondaryContainer" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp"
                    android:text="Announcements"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Announcements ViewPager -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/announcementPager"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    tools:background="@drawable/gradient_blue"
                    tools:listitem="@layout/item_announcement" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvNoAnnouncements"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:text="No announcement found"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorError"
                    android:visibility="gone" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    app:tabBackground="@drawable/tab_pager_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabPaddingEnd="10dp"
                    app:tabPaddingStart="10dp" />

                <!-- Overall Attendance Card with Progress Bar -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/attendanceCard"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainer"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_orange"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Overall Attendance"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvAttendancePercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                android:textColor="?attr/colorPrimaryDark"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressAttendance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:max="100"
                            android:progress="60"
                            app:indicatorColor="@color/progress_bar"
                            app:trackColor="@color/progress_bar_container"
                            app:trackCornerRadius="6dp"
                            app:trackThickness="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvPresentCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Present: 0"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvAbsentCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Absent: 0"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
                <!-- Dashboard Grid Section -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="12dp"
                    android:text="Management"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurface" />

                <GridLayout
                    android:id="@+id/dashboardGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false">

                    <!-- Teachers Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardTeachers"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:rippleColor="?attr/colorPrimary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="140dp"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:contentDescription="Teachers"
                                app:srcCompat="@drawable/ic_teacher"
                                app:tint="?attr/colorPrimary" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Teachers"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Students Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardStudents"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:rippleColor="?attr/colorPrimary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="140dp"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:contentDescription="Students"
                                android:src="@drawable/ic_students"
                                app:tint="?attr/colorPrimary" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Students"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Classes Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardClasses"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:rippleColor="?attr/colorPrimary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="140dp"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:contentDescription="Classes"
                                android:src="@drawable/ic_classes"
                                app:tint="?attr/colorPrimary" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Classes"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Homework Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHomework"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:rippleColor="?attr/colorPrimary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="140dp"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:contentDescription="Homework"
                                android:src="@drawable/ic_homework"
                                app:tint="?attr/colorPrimary" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Homework"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Salary Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSalary"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:rippleColor="?attr/colorPrimary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="140dp"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:contentDescription="Salary"
                                android:src="@drawable/ic_salary"
                                app:tint="?attr/colorPrimary" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Salary"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Fees Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardFees"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:rippleColor="?attr/colorPrimary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="140dp"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:contentDescription="Fees"
                                android:src="@drawable/ic_fees"
                                app:tint="?attr/colorPrimary" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Fees"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Attendance (S) Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardStudentAttendance"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:rippleColor="?attr/colorPrimary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="140dp"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:contentDescription="Attendance"
                                android:src="@drawable/ic_attendance"
                                app:tint="?attr/colorPrimary" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Attendance (S)"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Attendance (T) Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardTeacherAttendance"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:rippleColor="?attr/colorPrimary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="140dp"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:contentDescription="Teacher Attendance"
                                android:src="@drawable/ic_attendance"
                                app:tint="?attr/colorPrimary" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:gravity="center"
                                android:text="Attendance (T)"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Logout Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardLogout"
                        style="?attr/materialCardViewOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:rippleColor="?attr/colorError"
                        app:strokeColor="?attr/colorError"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="140dp"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:contentDescription="Logout"
                                android:src="@drawable/ic_logout"
                                app:tint="?attr/colorError" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Logout"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorError" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAnnounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Announce"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="?attr/colorOnPrimary"
