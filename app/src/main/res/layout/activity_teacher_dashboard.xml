<?xml version="1.0" encoding="utf-8"?><!-- Enhanced Admin Dashboard with Material Design 3 -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.dashboard.TeacherDashboardActivity">

    <!-- App Bar with lift-on-scroll for a modern, dynamic effect -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:liftOnScroll="true"
        app:liftOnScrollColor="?attr/colorPrimary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/ThemeOverlay.Material3.Light"
            app:title="Teacher Dashboard"
            app:titleTextAppearance="?attr/textAppearanceHeadlineSmall" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content with SwipeRefreshLayout and NestedScrollView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingBottom="80dp">

                <LinearLayout
                    android:id="@+id/welcomeSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:paddingStart="4dp">

                    <TextView
                        android:id="@+id/tvWelcomeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome, Teacher!"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTeacherClassInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:text="Class: Loading..."
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTeacherDivisionInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:text="Div: Loading..."
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Summary Statistics Card (Teacher Version) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/summaryCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="?attr/colorSecondaryContainer"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_green"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Header Row with Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Today's Overview"
                                android:textAppearance="?attr/textAppearanceTitleLarge"
                                android:textColor="?attr/colorOnPrimaryContainer" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvTodayDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.9"
                                android:text="--/--"
                                android:textAppearance="?attr/textAppearanceLabelLarge"
                                android:textColor="?attr/colorOnPrimaryContainer" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <!-- Total Students (My Class) -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tvMyStudents"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                    android:textColor="?attr/colorPrimary"
                                    android:textStyle="bold" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:alpha="0.8"
                                    android:text="Total"
                                    android:textAppearance="?attr/textAppearanceLabelMedium"
                                    android:textColor="?attr/colorOnSecondaryContainer" />

                            </LinearLayout>

                            <!-- Divider -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:alpha="0.2"
                                android:background="?attr/colorOnPrimaryContainer" />

                            <!-- Present Today -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tvPresentToday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                    android:textColor="@color/present"
                                    android:textStyle="bold" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:alpha="0.8"
                                    android:text="Present"
                                    android:textAppearance="?attr/textAppearanceLabelMedium"
                                    android:textColor="?attr/colorOnSecondaryContainer" />

                            </LinearLayout>

                            <!-- Divider -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:alpha="0.2"
                                android:background="?attr/colorOnPrimaryContainer" />

                            <!-- Absent Today -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tvAbsentToday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                    android:textColor="@color/absent"
                                    android:textStyle="bold" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:alpha="0.8"
                                    android:text="Absent"
                                    android:textAppearance="?attr/textAppearanceLabelMedium"
                                    android:textColor="?attr/colorOnSecondaryContainer" />

                            </LinearLayout>
                            <!-- ✅ NEW: Divider -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:alpha="0.2"
                                android:background="?attr/colorOnPrimaryContainer" />

                            <!-- ✅ NEW: Leave Today -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tvLeaveToday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                    android:textColor="@color/leave"
                                    android:textStyle="bold" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:alpha="0.8"
                                    android:text="Leave"
                                    android:textAppearance="?attr/textAppearanceLabelMedium"
                                    android:textColor="?attr/colorOnSecondaryContainer" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp"
                    android:text="Announcements"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurface" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/announcementPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:strokeWidth="0dp"
                        tools:visibility="visible">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvNoAnnouncements"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_blue"
                            android:gravity="center"
                            android:text="No announcement found"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="?attr/colorOnPrimary" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Announcements ViewPager -->
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/announcementPager"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        tools:listitem="@layout/item_announcement" />

                </FrameLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    app:tabBackground="@drawable/tab_pager_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabPaddingEnd="10dp"
                    app:tabPaddingStart="10dp" />

                <!-- Overall Attendance Card with Progress Bar -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/FeesOverview"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainer"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_orange"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Fee Collection"
                                android:textAppearance="?attr/textAppearanceTitleLarge"
                                android:textColor="?attr/colorOnSurface" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvAttendancePercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                android:textColor="?attr/colorPrimaryDark"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressAttendance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:max="100"
                            android:progress="0"
                            app:indicatorColor="@color/progress_bar"
                            app:trackColor="@color/progress_bar_container"
                            app:trackCornerRadius="6dp"
                            app:trackThickness="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvPresentCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Collected: 0"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvAbsentCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending: 0"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
                <!-- Dashboard Grid Section -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="12dp"
                    android:text="Management"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurface" />

                <GridLayout
                    android:id="@+id/dashboardGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="3"
                    android:columnOrderPreserved="false">

                    <!-- Students Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardStudents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#EFF6FF"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:rippleColor="#3B82F6">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="110dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:contentDescription="Students"
                                android:src="@drawable/ic_students"
                                app:tint="#3B82F6" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:maxLines="1"
                                android:text="Students"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Attendance (S) Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardStudentAttendance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#EEF2FF"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:rippleColor="#6366F1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="110dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:contentDescription="Attendance"
                                android:src="@drawable/ic_attendance"
                                app:tint="#6366F1" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:maxLines="1"
                                android:text="Attendance"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Homework Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHomework"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#FFF7ED"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:rippleColor="#F97316">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="110dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:contentDescription="Homework"
                                android:src="@drawable/ic_homework"
                                app:tint="#F97316" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:maxLines="1"
                                android:text="Homework"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Announcement Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAnnouncement"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#FFFBEB"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:rippleColor="#D97706">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="110dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:contentDescription="Announcement"
                                android:src="@drawable/ic_announce"
                                app:tint="#D97706" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:maxLines="1"
                                android:text="Announce"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Fees Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardFees"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#ECFDF5"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:rippleColor="#10B981">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="110dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:contentDescription="Fees"
                                android:src="@drawable/ic_fees"
                                app:tint="#10B981" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:maxLines="1"
                                android:text="Fees"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Salary Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSalary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#F0FDFA"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:rippleColor="#14B8A6">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="110dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:contentDescription="Salary"
                                android:src="@drawable/ic_salary"
                                app:tint="#14B8A6" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:maxLines="1"
                                android:text="Salary"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Leave Approval Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardLeaveApproval"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#FFF1F2"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:rippleColor="#F43F5E">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="110dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:contentDescription="Leaves"
                                android:src="@drawable/ic_leave"
                                app:tint="#F43F5E" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
