<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.fragments.FeesFragment">

    <!--
        NestedScrollView ab direct child hai FrameLayout ka.
        Ye scroll events seedha ViewPager2 ko bhejega, jisse AppBar collapse hoga.
    -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Fees Summary Dashboard -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/feeSummaryCard"
                style="@style/Widget.Material3.CardView.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/feeSummaryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Total Fees -->
                    <LinearLayout
                        android:id="@+id/totalFeesContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/divider1"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvTotalFees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Fees"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvTotalFeesAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="₹0"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="?attr/colorPrimary" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider1"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/totalPaidContainer"
                        app:layout_constraintStart_toEndOf="@+id/totalFeesContainer"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Total Paid -->
                    <LinearLayout
                        android:id="@+id/totalPaidContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/divider2"
                        app:layout_constraintStart_toEndOf="@+id/divider1"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvTotalPaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Paid"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvTotalPaidAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="₹0"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="@color/design_default_color_primary" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider2"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/discountContainer"
                        app:layout_constraintStart_toEndOf="@+id/totalPaidContainer"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Discounts -->
                    <LinearLayout
                        android:id="@+id/discountContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/divider3"
                        app:layout_constraintStart_toEndOf="@+id/divider2"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvTotalDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discounts"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvTotalDiscountAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="₹0"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="@color/design_default_color_secondary" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider3"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/totalDueContainer"
                        app:layout_constraintStart_toEndOf="@+id/discountContainer"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Total Due -->
                    <LinearLayout
                        android:id="@+id/totalDueContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/divider3"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvTotalDue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Due"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvTotalDueAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="₹0"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="?attr/colorError" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Content Area -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/emptyView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="No fees records found"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:visibility="gone"
                    tools:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewFees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_fee" />

            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--
        FAB: "layout_behavior" HATA DIYA hai.
        Ab ye simple FrameLayout child ki tarah bottom-right me rahega.
    -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Add Fees"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"
        app:elevation="6dp"
        app:icon="@drawable/ic_add"
        app:iconTint="?attr/colorOnPrimary"
        app:pressedTranslationZ="12dp"
        app:rippleColor="?attr/colorOnPrimary"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

</FrameLayout>