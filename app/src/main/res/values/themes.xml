<resources>
    <!-- Base Light Theme -->
    <style name="Base.Theme.SchoolManagement" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <!-- Error Colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>

        <!-- Surface Container Colors -->
        <item name="colorSurfaceContainerLowest">@color/md_theme_light_surfaceContainerLowest</item>
        <item name="colorSurfaceContainerLow">@color/md_theme_light_surfaceContainerLow</item>
        <item name="colorSurfaceContainer">@color/md_theme_light_surfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_light_surfaceContainerHigh</item>
        <item name="colorSurfaceContainerHighest">@color/md_theme_light_surfaceContainerHighest</item>

        <!-- Outline Colors -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>

        <!-- Other -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:navigationBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.SchoolManagement.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.SchoolManagement.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.SchoolManagement.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.SchoolManagement.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.SchoolManagement.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.SchoolManagement.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.SchoolManagement.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.SchoolManagement.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.SchoolManagement.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.SchoolManagement.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.SchoolManagement.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.SchoolManagement.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.SchoolManagement.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.SchoolManagement.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.SchoolManagement.LabelSmall</item>

        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SchoolManagement.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.SchoolManagement.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.SchoolManagement.LargeComponent</item>

        <!-- Material Components -->
        <item name="materialCardViewStyle">@style/Widget.SchoolManagement.CardView</item>
        <item name="materialButtonStyle">@style/Widget.SchoolManagement.Button</item>
        <item name="textInputStyle">@style/Widget.SchoolManagement.TextInputLayout</item>
        <item name="toolbarStyle">@style/Widget.SchoolManagement.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.SchoolManagement.BottomNavigationView</item>

    </style>

    <!-- Application Theme -->
    <style name="Theme.SchoolManagement" parent="Base.Theme.SchoolManagement" />

    <!-- Dark Theme -->
    <style name="Theme.SchoolManagement.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>

        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>

        <!-- Error Colors -->
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>

        <!-- Surface Container Colors -->
        <item name="colorSurfaceContainerLowest">@color/md_theme_dark_surfaceContainerLowest</item>
        <item name="colorSurfaceContainerLow">@color/md_theme_dark_surfaceContainerLow</item>
        <item name="colorSurfaceContainer">@color/md_theme_dark_surfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_dark_surfaceContainerHigh</item>
        <item name="colorSurfaceContainerHighest">@color/md_theme_dark_surfaceContainerHighest</item>

        <!-- Outline Colors -->
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_dark_outlineVariant</item>

        <!-- Other -->
        <item name="android:statusBarColor">@color/md_theme_dark_surface</item>
        <item name="android:navigationBarColor">@color/md_theme_dark_surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.SchoolManagement.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.SchoolManagement.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.SchoolManagement.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.SchoolManagement.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.SchoolManagement.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.SchoolManagement.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.SchoolManagement.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.SchoolManagement.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.SchoolManagement.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.SchoolManagement.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.SchoolManagement.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.SchoolManagement.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.SchoolManagement.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.SchoolManagement.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.SchoolManagement.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.SchoolManagement.SmallComponent" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.SchoolManagement.MediumComponent" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.SchoolManagement.LargeComponent" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- Component Styles -->
    <style name="Widget.SchoolManagement.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.SchoolManagement.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Widget.SchoolManagement.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="Widget.SchoolManagement.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.SchoolManagement.TitleLarge</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.SchoolManagement.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Rounded corners -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>

        <!-- Button text color -->
        <item name="buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>

    <style name="TransparentDialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowNoTitle">true</item>

        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Corner.Full" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- or any dp value -->
    </style>

</resources>
