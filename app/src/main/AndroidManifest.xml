<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <!-- ✅ UPI Apps Visibility for Android 11+ (API 30) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="upi" />
        </intent>
    </queries>

    <application
        android:name=".MyApp"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SchoolManagement">
        <activity
            android:name=".ui.scanner.QRScannerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.salary.SalaryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.homework.HomeworkActivity"
            android:exported="false" />
        <activity
            android:name=".ui.fees.FeesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.UserDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.classmanager.ClassManagerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.UserListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.UserFormActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.auth.StudentSignupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.attendance.AttendanceActivity"
            android:exported="false" />
        <activity
            android:name=".ui.approval.LeaveApprovalActivity"
            android:exported="false" />
        <activity
            android:name=".ui.chat.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.student.StudentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.dashboard.TeacherDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.dashboard.AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.syllabus.SyllabusActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" /> <!-- ✅ Google Play Services ko batayein ki Barcode Module download kare -->

        <!-- ✅ Disable Default WorkManager Initializer (Required for Hilt) -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

        <activity
            android:name=".ui.timetable.SubjectManagementActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".ui.timetable.TimetableManagementActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

    </application>

</manifest>